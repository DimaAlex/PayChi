<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wish_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.paychi.dima.paychi.WishItemsActivity">

    <Button
        android:id="@+id/btn_addWishItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toCreateWishActivity"
        android:text="Добавить подарок">
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Список подарков">
    </TextView>
    <ListView
        android:id="@+id/lvWishItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
