<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.paychi.dima.paychi.TaskItemsActivity">

    <Button
        android:id="@+id/btn_addTaskItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toCreateTaskActivity"
        android:text="Добавить задачу">
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Список задач">
    </TextView>
    <ListView
        android:id="@+id/lvTaskItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>